
sudo cat /usr/lib/systemd/system/zabbix-web-service.service
[Unit]
Description=Zabbix Web Service
After=syslog.target
After=network.target

[Service]
Environment="CONFFILE=/etc/zabbix/zabbix_web_service.conf"
EnvironmentFile=-/etc/default/zabbix_web_service
Type=simple
Restart=on-failure
KillMode=control-group
ExecStart=/usr/sbin/zabbix_web_service -c $CONFFILE
ExecStop=/bin/sh -c '[ -n "$1" ] && kill -s TERM "$1"' -- "$MAINPID"
RestartSec=10s
User=zabbix
Group=zabbix

[Install]
WantedBy=multi-user.target

Edited

[Unit]
Description=Zabbix Web Service
After=syslog.target
After=network.target

[Service]
Environment="CONFFILE=/etc/zabbix/zabbix_web_service.conf"
EnvironmentFile=       ############ OPTIONAL
Type=simple
Restart=on-failure
KillMode=control-group
ExecStart=/usr/sbin/zabbix_web_service -c $CONFFILE
ExecStop=/bin/sh -c '[ -n "$1" ] && kill -s TERM "$1"' -- "$MAINPID"
RestartSec=10s
User=zabbix
Group=zabbix

[Install]
WantedBy=multi-user.target

################# STANDARD CONF FILE OF ZABBIX-WEB-SERVICE #####################
/etc/zabbix/zabbix_web_service.conf (standard Zabbix Web Service config)
# /etc/zabbix/zabbix_web_service.conf
ListenIP=0.0.0.0           # Listen on all interfaces
ListenPort=10053            # Default web service port
LogFile=/var/log/zabbix/zabbix_web_service.log
LogFileSize=0               # 0 = unlimited
PidFile=/var/run/zabbix/zabbix_web_service.pid
Timeout=30                  # Connection timeout in seconds
DebugLevel=3                # 0=none, 4=maximum
